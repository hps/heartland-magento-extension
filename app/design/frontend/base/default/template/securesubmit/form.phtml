            <?php if ($_loggedIn && $allow_card_saving && $public_key): ?>
                <div class="input-box" style="display:inline;">
                    <input type="checkbox" id="<?= $_code ?>_cc_save_future" name="payment[cc_save_future]" value="Y" autocomplete="off" />
                    <label style="display: inline-block;" for="<?= $_code ?>_cc_save_future"><?= $this->__('Save this card for future use?') ?></label>
                </div>
            <?php endif ?>
        </div>
