          <a id="remove-gift-card" class="button" style="display: none;"><?= $this->__('Remove Gift Card') ?></a>
          <a id="apply-gift-card" class="button"><?= $this->__('Apply Gift Card') ?></a>
      </li>
    <?php endif ?>
</ul>

