                    <div id="<?= $_code ?>_cc_cvv_iframe"></div>
                <?php else: ?>
                    <div class="v-fix">
                        <input type="tel" title="<?= $this->__('Card Verification Number') ?>" class="icon-sc cvv required-entry input-text validate-cc-cvn" autocomplete="off" placeholder="CVV" id="<?= $_code ?>_cvv_number"/>
